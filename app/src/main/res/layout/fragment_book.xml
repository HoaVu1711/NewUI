<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/_10sdp"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Fragment.BookFragment">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_book"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_text"
                    android:layout_alignParentLeft="true"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/bold_blue"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:text="BookDocument"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:paddingLeft="@dimen/_5sdp"
                    android:hint="Search"
                    android:drawablePadding="@dimen/_5sdp"
                    android:id="@+id/edt_search"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/ic_search_icon"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:background="@drawable/ic_bg_edt_search"
                    android:layout_toRightOf="@+id/tv_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_threedot"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_list_book"
        android:layout_marginTop="@dimen/_5sdp"
        android:padding="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</LinearLayout>